<hr>
<div class="product-reviews">
	<h4>Customer reviews</h4>
	<% @comments.each do |comment| %>
	<div class="row clearfix">
		<p class="pull-left"><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
		<p class="pull-right"><%= "Rating: #{comment.rating}/5" %></p>
		<p class="comment_body"><%= comment.body %></p>
	</div>
	<% end %>
</div>