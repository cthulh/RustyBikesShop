<div class="products-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="center-text">Rusty Bikes
          <div class="add-product">
            <%= link_to 'New Product', new_product_path , class: 'btn btn-success' %>
          </div>
        </h1>
      </div>
      <div class="col-xs-12">
        <% @products.each do |product| %>
          <%= render product %>
        <% end %>
      </div>
    </div> <!-- /row -->
  </div> <!-- /container -->
</div> <!-- /products-wrapper -->
