<div class="col-xs-12 col-md-6 col-lg-4">
  <div class="col-xs-12">
    <%= image_tag(product.image_url, class: "img-responsive img-thumbnail center product-img") %>
  </div>
  <div class="col-xs-12">
    <h4><%= product.name %></h4>
    <p><%= product.description %></p>
    <p>Original color: <%= product.colour %> </p>
    <p>Price: Â£<%= product.price %></p>
    <p><%= link_to 'Show', product, class: 'btn btn-default pull-left mini-space-right' %></p>
    <p><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-default pull-left mini-space-right' %></p>
    <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default pull-left mini-space-right' %></p>
  </div>
</div>