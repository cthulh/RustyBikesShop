<div class="container-fluid">
	<h1>Contact us</h1>
	<p><%= flash[:notice]%></p>
	<div class="row">
		<div class="col-xs-12 col-md-6">
			<%= form_tag(thank_you_path) do %>
			<div class="form-group">
				<%= label_tag :name %>
				<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter your name" %>
			</div>
			<div class="form-group">
				<%= label_tag :email %>
				<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter your email address" %>		
			</div>
			<div class="form-group">
				<%= label_tag :message %>
				<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter your message" %>
			</div>
			<%= button_tag "Submit", type: "submit", class: "btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>